{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "router/*": ["./src/router/*"],
      "store/*": ["./src/store/*"],
      "views/*": ["./src/views/*"],
    }
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
